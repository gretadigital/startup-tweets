<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>

  <body>
    <%- include("./partials/nav.ejs") %>
    <div class="mx-4">
      <%- include("./partials/pagination.ejs") %>
      <table id="myTable" class="table table-bordered table-striped table-hover mt-4 js-sort-table">
        <thead>
          <tr class="table-primary">
            <th class="js-sort-string" scope="col">Author</th>
            <th class="js-sort-date" scope="col">Date</th>
            <th class="js-sort-string" scope="col">Text</th>
            <th class="js-sort-number" scope="col">Likes</th>
            <th class="js-sort-number" scope="col">Retweets</th>
            <th class="js-sort-number" scope="col">Discussions</th>
          </tr>
        </thead>
        <tbody>
          <% if (tweets.length > 0) { %>
          <% tweets.forEach(tweet => { %>
          <tr>
            <td><%= tweet.author %></td>
            <td><%= tweet.date %></td>
            <td><%= tweet.text %></td>
            <td><%= tweet.likes %></td>
            <td><%= tweet.retweets %></td>
            <td><%= tweet.discussions %></td>
          </tr>
          <% }) %>
          <% } else { %>
          <p>There are no tweets to display...</p>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>

</html>
